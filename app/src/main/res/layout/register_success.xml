<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgoundi"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        style="@style/w_m_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l_r"
            android:text="QQ号:"
            android:textSize="31sp" />

        <TextView
            android:id="@+id/show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="965759740"
            android:textColor="#f9aa8b"
            android:textSize="31sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/w_m_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l_r"
            android:text="密 码:"
            android:textSize="31sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345678"
            android:textColor="#f9aa8b"
            android:textSize="31sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/margin_l_r"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/wrap_content"
            android:layout_marginLeft="7dp"
            android:text="请及时" />

        <TextView
            android:id="@+id/r_s_login"
            style="@style/wrap_content"
            android:text="登录"
            android:textColor="@color/log_text"
            android:textSize="18sp" />

        <TextView
            style="@style/wrap_content"
            android:text="修改密码" />

    </LinearLayout>
</LinearLayout>